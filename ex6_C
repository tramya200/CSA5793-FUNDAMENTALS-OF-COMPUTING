#include <stdio.h>

int main() {
    int n, i;
    int sum = 0;

    printf("Enter the number of terms: ");
    scanf("%d", &n);
   
    printf("Enter %d numbers:\n", n);

    for (i = 0; i < n; i++) {
        int num;
        scanf("%d", &num);
        if (num % 2 == 0) { // Check if the number is even
            sum += num;
        }
    }

    printf("Sum of even numbers in the series: %d\n", sum);

    return 0;
}
